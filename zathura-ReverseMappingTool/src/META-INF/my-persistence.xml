<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
    
	<persistence-unit name="demoOpenJPAPU" transaction-type="RESOURCE_LOCAL">
		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
  		<properties>
			<property name = "openjpa.ConnectionDriverName" value = "oracle.jdbc.driver.OracleDriver"/>
			<property name = "openjpa.ConnectionURL" value = "jdbc:oracle:thin:@127.0.0.1:1521:xe"/>
			<property name = "openjpa.ConnectionUserName" value = "banco"/>
			<property name = "openjpa.ConnectionPassword" value = "banco"/>
			<property name = "openjpa.Log" value="DefaultLevel=WARN, Tool=INFO"/>			
	  	</properties>
	</persistence-unit>
  
</persistence>
